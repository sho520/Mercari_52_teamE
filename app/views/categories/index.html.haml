- breadcrumb :category
.index__wrapper
  %main.category__main
    .category__item
      .category__item-box
        %h2.category__h2 カテゴリー一覧
        .category__item-box__titles
          %a#title_mens.category__item-box__titles__title{href: ""}
            %div メンズ
          :javascript
            $("#title_mens").click(function(){
              var position = $("#category_メンズ").offset().top;
                $("html,body").animate({
                    scrollTop : position
                }, {
                    queue : false
                });
            });
