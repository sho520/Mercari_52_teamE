      .category__list
        - @root_category.each do |a_root|
          .category__list__category
            .category__list__category__name{id: "category_#{a_root.name}"}
              = a_root.name
            .category__list__category__name__detail
              .category__list__category__name__detail__all
                %a{href: "/categories/#{a_root.id}"}
                  すべて
              - a_root.children.each do |a_parent|
                .category__list__category__name__detail__janre
                  = a_parent.name
                .category__list__category__name__detail__details
                  - a_parent.children.each do |a_child|
                    .category__list__category__name__detail__details__item
                      %a{href: "/categories/#{a_child.id}"}
                        = a_child.name
                        
  = link_to items_path, class: "items-index__container__sale-btn" do
    .items-index__container__sale-btn__text 出品
