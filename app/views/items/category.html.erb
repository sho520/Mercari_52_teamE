            $("#title_mens").click(function(){
              var position = $("#category_mens").offset().top;
                $("html,body").animate({
                    scrollTop : position
                }, {
                    queue : false
                });
            });
            </script>
          <a href = "" class = "category__item-box__titles__title"><div>ベビー・キッズ</div></a>
