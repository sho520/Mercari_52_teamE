= javascript_include_tag "myitems.edit.js"
.edit__s__ExhibitionPage__MainBox
  .edit__s__MainBox__Title
    %h2.edit__Title 商品の情報を入力
  = form_for @item do |f|
    .edit__s__MainBoxform__Content
      .edit__s__ContentImage
        .edit__s__ContentImage__Title
          出品画像
          %span.edit__hissu 必須
        %p.edit__saidai10 最大10枚までアップロードできます
        .edit__s__ContentImage__Image
          ドラッグアンドドロップ
          %bl
            またはクリックしてファイルをアップロード
      .edit__s__Content__Name__Description
        .edit__s__Content__Name
          %label.edit__box2font{for: ""} 商品名
          %span.edit__hissu 必須
          %div
            = f.text_field :name, class:"edit__s__Content__Nametittle" , placeholder:" 商品名（必須 40文字まで)"
        .edit__s__Content__Description
          %label.edit__box2font{for: ""} 商品の説明
          %span.edit__hissu 必須
          = f.text_area :description, class:"edit__s__contemt__text" , placeholder:"商品の説明（必須 1,000文字以内）（色、素材、重さ、定価、注意点など）例）2010年頃に1万円で購入したジャケットです。ライトグレーで傷はありません。あわせやすいのでおすすめです。"
      .edit__s__Exhibition__Details
        %h2.edit__box3__itemfont1 商品の詳細
        .edit__s__Details__Configuration
          .edit__s__Details__Category1
            %label.edit__box3__itemfont2{for:  ""} カテゴリー
            %span.edit__hissu 必須
            %div
              = f.collection_select(:large_class_id, @large_classes, :id, :name, class: "edit__s__box3", :id => "edit__s__Details__Category2")
          .edit__s__Details__Category2
            %label{for: ""}
            %div
              = f.collection_select(:middle_class_id, @middle_classes, :id, :name, class: "edit__s__box3")
          .edit__s__Details__Category3
            %label{for: ""}
            %div
              = f.collection_select(:small_class_id, @small_classes, :id, :name, class: "edit__s__box3")
          .edit__s__Details__State
            %label.edit__box3__itemfont2{for: ""} 商品の状態
            %span.edit__hissu 必須
            %div
              = f.collection_select(:condition_id, @conditions, :id, :condition_rank, class: "edit__s__box3")
      .edit__s__Content__delivery
        .edit__s__delivery__LeftContent
          %h2.edit__box4__itemfont
            配送について
            \#{link_to '?', new_item_path, class: "btn-large"}
        .edit__s__delivery__RightContent
          .edit__s__delivery__Description
            %label{for: ""} 配送料の負担
            %span.edit__hissu 必須
            %div
              = f.collection_select(:shipping_fee_payer_id, @shipping_fee_payers, :id, :payer, class: "edit__s__box4")
          .edit__s__delivery__Configuration
            %label{for: ""} 発送までの日数
            %span.hissu 必須
            %div
              = f.collection_select(:shipping_day_id, @shipping_days, :id, :days, class: "edit__s__box4")
      .edit__s__Content__Price
        %h2.edit__box5__itemfont1 販売価格(300〜9,999,999)
        .edit__s__Price__light
          .edit__s__Price__box
            .edit__s__Price__title
              %label.edit__box5__itemfont2{for:  ""} 価格
              %span.edit__hissu 必須
            .edit__s__Price__Configuration
              = f.number_field :price, class:"edit__inputPrice" , id:"price"
          .edit__s__Price__Fee
            %label{for: ""} 販売手数料 (10%)
            %output#edit__fee{type:  "number"} 
              = "¥ " + (@price * 0.1).to_i.floor.to_s(:delimited)
          .edit__s__Price__Profit
            %label.edit__box5__itemfont2{for:  ""} 販売利益
            %output#edit__profit{type: "number"} 
              = "¥ " + (@price * 0.9).to_i.floor.to_s(:delimited)
      .edit__s__Content__Terms
        %p
          %span{style: "color:#33aaf0"}> 禁止されている出品
          、
          %span{style: "color:#33aaf0"}>行為
          を必ずご確認ください。
          %br/
          またブランド品でシリアルナンバー等がある場合はご記載ください。
          %span{style: "color:#33aaf0"}>偽ブランドの販売
          は犯罪であり処罰される可能性があります。
          %br/
          また、出品をもちまして
          %span{style: "color:#33aaf0"}>加盟店規約
          に同意したことになります。
          %br/
          %br/
          %br/
          %br/
        %div
          .edit__s__submit
            = f.submit "更新する", class: 'edit__s__submit'
        .edit__btn__back1
          = link_to 'もどる', item_path, class: "edit__modoru"
